<article>
  <header>
	<h2><%= article.title %></h2>
   	<em>by</em> <span class="author"><%= article.author.name %></span>
	on <span class="date"><%= article.created_at.strftime('%B %e, %Y') %>
	<% if author_signed_in? && (current_author == article.author) %>
	<%= link_to 'Edit this article', edit_article_path(article) %>
	<% end %>
  </header>
	<section>
		<%= raw(article.rendered_body) %>
	</section>
</article>