<%= form_for @article, :remote => (params[:action] == 'index') || false do |f| %>
	<% if @article.errors.any? -%>
	<%= render :partial => 'shared/errors', :locals => {:object => @article} %>
	<% end %>
	<%= field_set_tag do %>
		<%= f.label :title%>
		<%= f.text_field :title %>
	<% end %>

	<%= field_set_tag do %>
		<%= f.label :body%>
		<%= f.text_area :body %>
	<% end %>
	<%= submit_tag (params[:action] == 'index' && 'Post') || 'Edit', :id => "submit" %>
<% end %>